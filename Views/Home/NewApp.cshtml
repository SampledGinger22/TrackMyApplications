@{
    ViewData["Title"] = "New Application";
}
@model Application

<form class="form-group" asp-controller="Home" asp-action="SaveApp">
<div class="content_body">
    <h1 style="text-align: center;">Congrats! You've applied, now lets track it.</h1>
    <h3 style="text-align: center;">Enter the job details below.</h3>
    <div class="content_body flex-row justify-content-between" style="gap: 20px;">
        <div class="d-flex flex-column justify-content-top">
            <label asp-for="BusinessName">Business Name:</label>
            <input class="form-control" type="text" asp-for="BusinessName"><br>
            <label asp-for="JobTitle">Job Title:</label>
            <input class="form-control" asp-for="JobTitle" type="text"><br>
            <label asp-for="JobURL">Job Listing URL:</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">http://</span>
                </div>
                <input type="text" class="form-control" asp-for="JobURL">
            </div><br>
            <label asp-for="AppDate">Application Date:</label>
            <input class="form-control" type="date" asp-for="AppDate">
        </div>
        <div class="d-flex flex-column justify-content-top">
            <label asp-for="Contact">Main Contact Name:</label>
            <input class="form-control" type="text" asp-for="Contact"><br>
            <label asp-for="CTitle">Contact Title:</label>
            <input asp-for="CTitle" type="text" class="form-control"><br>
            <label asp-for="CPhone">Contact Phone: </label>
            <input class="form-control" type="tel" onkeydown="phoneNumberFormatter()" id="phone" asp-for="CPhone"><br>
            <label asp-for="CEmail">Contact Email: </label>
            <input class="form-control" type="email" asp-for="CEmail">
        </div>
        <div class="d-flex flex-column justify-content-top">
            <label asp-for="MinSalary">Minimum Salary:</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="text" asp-for="MinSalary" class="form-control currency">
                <div class="input-group-append">
                    <span class="input-group-text">.00</span>
                </div>
            </div><br>
            <label asp-for="MaxSalary">Max Salary:</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="text" asp-for="MaxSalary" class="form-control currency">
                <div class="input-group-append">
                    <span class="input-group-text">.00</span>
                </div>
            </div><br>
            <label asp-for="HourlyRate">Hourly Rate:</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" step=".01" max="999999999.99" asp-for="HourlyRate" class="form-control currency">
            </div><br>
            <label asp-for="Location">Job Location</label>
            <input type="text" asp-for="Location" class="form-control"><br>
        </div>
    </div><br>
    <label asp-for="AddContacts" style="font-size: 20px;">Additional Contacts:</label>
    <textarea asp-for="AddContacts" cols="30" rows="10" style="overflow-y: scroll; width: 100%;"></textarea><br>
    <label asp-for="Pros" style="font-size: 20px;">Job Pros:</label>
    <textarea asp-for="Pros" cols="30" rows="10" style="overflow-y: scroll; width: 100%;"></textarea><br>
    <label asp-for="Cons" style="font-size: 20px;">Job Cons:</label>
    <textarea asp-for="Cons" cols="30" rows="10" style="overflow-y: scroll; width: 100%;"></textarea><br>
    <label asp-for="Notes" style="font-size: 20px;">Additional Notes</label>
    <textarea asp-for="Notes" cols="30" rows="10" style="overflow-y: scroll; width: 100%;"></textarea><br>
    <button class="btn btn-success" type="submit" style="width: 20%; margin-left: 40%; margin-bottom: 25px;">Create Application</button>
</div>
</form>
<script src="~/js/phones.js"></script>
<script src="~/js/currency.js"></script>